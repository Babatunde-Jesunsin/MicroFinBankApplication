@model BankData.Entities.Account

@{
    ViewBag.Title = "ChangeStatus";
}
@{
    ViewBag.Title = "Home Page";
    List<SelectListItem> option = new List<SelectListItem>();
    var option1 = new SelectListItem() { Text = "Active", Value = "Active" };
    option.Add(option1);
    var option2 = new SelectListItem() { Text = "Deactivated", Value = "Deactivated" };
    option.Add(option2);
    var option3 = new SelectListItem() { Text = "Blocked", Value = "Blocked" };
    option.Add(option3);
}


<h2>ChangeStatus</h2>

@using (Html.BeginForm("ChangeStatus", "Admin"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Account</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.AccountNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AccountNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AccountNumber, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("status", option)
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })

                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
